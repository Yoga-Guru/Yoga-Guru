<nav>
    <section id="nav-section" class="dashboard-nav-section">
        <h1 id="nav-heading">Share Me</h1>
        <div id="nav-btns">
            <span id="name-head">
                <lord-icon src="https://cdn.lordicon.com/vusrdugn.json" trigger="loop" delay="5000"
                    style="width:50px;height:50px">
                </lord-icon>{{name}}
            </span>
            <a href="/logout" class="btn">Logout</a>
        </div>
    </section>
</nav>
<main>
    <section id="dashboard-main-section">
        <div id="left-section">
            <form method="post" action="/dashboard" id="upload-file" encType="multipart/form-data">
                <div id="file-upload-section">
                    <div class="icon"><i class="fas fa-cloud-upload-alt"></i></div>
                    <input id="btn" type="file" name="file" style="display:none;">
                    <input type="button" id="browse-btn" onclick="document.getElementById('btn').click();" value="Browse File" />
                </div>
                <button type="submit" id="upload-btn">Upload</button>
            </form>
        </div>
        <div id="right-section">
            <form id="download-section">
                <input type="text" id="download-link">
                <button id="download-btn">Download</button>
            </form>
        </div>
    </section>
    <div id="download-form" style="display: none;" >
        <span id="close">X</span>
         <h3 id="heading" class="download-heading">Download File</h3>
        <a id="download-url" download>Download</a>
    </div>
</main>

<script src="js/script.js"></script>